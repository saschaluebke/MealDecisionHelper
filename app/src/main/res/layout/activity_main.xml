<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sascha.mealdecisionhelper.MainActivity"
    android:background="@drawable/bg_gradient">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MealDecisionHelper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintVertical_bias="0.171"
        android:id="@+id/textView"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/rezeptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#40ffffff"
        android:text="Rezepte"
        android:textColor="#ffffffff"
        android:layout_marginTop="73dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="142dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Kaufliste"
        android:id="@+id/buyButton"
        android:layout_weight="1"
        android:background="#40ffffff"
        android:textColor="#ffffffff"
        android:layout_marginStart="256dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_marginTop="79dp"
        app:layout_constraintTop_toBottomOf="@+id/rezeptButton" />

</android.support.constraint.ConstraintLayout>
