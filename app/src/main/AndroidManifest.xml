<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sascha.mealdecisionhelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/new_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RecipeActivity" />
        <activity android:name=".ui.NewRecipeActivity" />
        <activity
            android:name=".ui.IngredientActivity"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".ui.EditRecipeActivity" />
        <activity android:name=".ui.ShoppingListActivity" />
        <activity android:name=".ui.ChooseCategoryActivity" />
        <activity android:name=".ui.ChooseIngredientActivity" />
        <activity android:name=".ui.ChooseCharacteristicsActivity" />
        <activity android:name=".ui.NewCategoryActivity" />
        <activity android:name=".ui.OptionsActivity"></activity>
    </application>

</manifest>